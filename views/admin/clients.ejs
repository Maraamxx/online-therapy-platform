<div class="section-header">
    <h3>All Clients</h3>
</div>
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Client ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (clients && clients.length > 0) { %>
                <% clients.forEach(client => { %>
                    <tr>
                        <td><%= client.user_id%>...</td>
                        <td><%= client.name %></td>
                        <td><%= client.email %></td>
                        <td><%= client.gender || 'N/A' %></td>
                        <td><%= client.phone_number || 'N/A' %></td>
                        <td>
                            <span class="status-badge status-<%= client.is_active ? 'active' : 'inactive' %>">
                                <%= client.is_active ? 'Active' : 'Inactive' %>
                            </span>
                        </td>
                        <td class="action-buttons">
                            <% if (client.is_active) { %>
                                <button class="btn btn-deactivate" data-user-id="<%= client.user_id %>">
                                    <i class="fas fa-user-slash"></i> Deactivate
                                </button>
                            <% } else { %>
                                <button class="btn btn-activate" data-user-id="<%= client.user_id %>">
                                    <i class="fas fa-user-check"></i> Activate
                                </button>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="7">No clients found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>