<div class="section-header">
    <h3><%= title %></h3>
</div>
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Therapist ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Specialization</th>
                <th>Experience</th>
                <th>License</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (therapists && therapists.length > 0) { %>
                <% therapists.forEach(therapist => { %>
                    <tr>
                        <td><%= therapist.user_id %>...</td>
                        <td>Dr. <%= therapist.name %></td>
                        <td><%= therapist.email %></td>
                        <td><%= therapist.specialization || 'N/A' %></td>
                        <td><%= therapist.experience_years || 'N/A' %> years</td>
                        <td><%= therapist.license_number || 'N/A' %></td>
                        <td>
                            <span class="status-badge status-<%= therapist.is_active ? 'Active' : 'Inactive' %>">
                                <%= therapist.is_active ? 'Active' : 'Inactive' %>
                            </span>
                        </td>
                        <td class="action-buttons">
                            <% if (therapist.is_active) { %>
                                <button class="btn btn-deactivate" data-user-id="<%= therapist.user_id %>">
                                    <i class="fas fa-user-slash"></i> Deactivate
                                </button>
                            <% } else { %>
                                <button class="btn btn-activate" data-user-id="<%= therapist.user_id %>">
                                    <i class="fas fa-user-check"></i> Activate
                                </button>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="8">No therapists found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>