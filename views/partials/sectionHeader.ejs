<div class="flex items-center gap-3 mb-6 animate-slide-in">
    <% if (icon) { %>
        <div class="p-2 bg-primary/10 rounded-lg">
            <i data-feather="<%= icon %>" class="h-6 w-6 text-primary"></i>
        </div>
        <% } %>
            <div>
                <h2 class="text-2xl font-bold text-gray-900">
                    <%= title %>
                        <% if (count !==undefined) { %>
                            <span class="ml-3 px-3 py-1 bg-primary text-white text-sm rounded-full">
                                <%= count %>
                            </span>
                            <% } %>
                </h2>
            </div>
</div>