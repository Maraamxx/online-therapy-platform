<div class="card bg-white border border-blue-200 rounded-xl p-6 flex flex-col gap-4 shadow-md">
    <div class="flex items-center justify-between mb-2">
        <span
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-semibold bg-blue-100 text-blue-800 border-2 border-blue-200">
            <i data-feather="refresh-cw" class="h-4 w-4"></i>
            Reschedule Request
        </span>
        <span class="text-xs text-gray-500">
            Requested by: <strong>
                <%= requestorName %>
            </strong>
        </span>
    </div>
    <div class="text-sm text-gray-700">
        <div>
            <strong>Old Date & Time:</strong>
            <%= new Date(appointment.old_date_time || appointment.date_time).toLocaleString('en-US') %>
        </div>
        <div>
            <strong>Proposed New Date & Time:</strong>
            <%= new Date(appointment.date_time).toLocaleString('en-US') %>
        </div>
        <div>
            <strong>Session Type:</strong>
            <%= appointment.session_type %>
        </div>
        <div>
            <strong>Duration:</strong>
            <%= appointment.duration %> minutes
        </div>
        <% if (appointment.reschedule_reason) { %>
            <div class="mt-2 text-blue-700">
                <strong>Reason:</strong>
                <%= appointment.reschedule_reason %>
            </div>
            <% } %>
    </div>
    <div class="flex gap-4 mt-4">
        <button
            class="accept-reschedule-btn px-4 py-2 rounded-md bg-green-600 text-white text-sm font-semibold shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 transition border-2 border-green-700"
            data-appointment-id="<%= appointment.appointment_id %>">
            <i data-feather="check-circle" class="h-4 w-4 mr-2 inline"></i>
            Accept
        </button>
        <button
            class="decline-reschedule-btn px-4 py-2 rounded-md bg-red-600 text-white text-sm font-semibold shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 transition border-2 border-red-700"
            data-appointment-id="<%= appointment.appointment_id %>">
            <i data-feather="x-circle" class="h-4 w-4 mr-2 inline"></i>
            Decline
        </button>
    </div>
</div>