<% var extraCSS = '<link rel="stylesheet" href="/css/contact.css" />'; %>
<%- include('partials/header', {title: 'Contact Us - InnerAura.', extraCSS: extraCSS}) %>

<main>
    <section class="contact-section">
        <div class="contact-illustration">
            <img src="/images/illustrations/contact-us.svg" alt="Illustration of people communicating." class="illustration">
        </div>
        <div class="contact-content">
            <h1>Questions, thoughts, or just curious? Say hi!</h1>
            <p class="intro-text">Have questions, feedback, or just want to say hello? We'd love to hear from you. Fill out the form below or reach out to us directly.</p>

            <% if (successMessage) { %>
                <div class="alert alert-success">
                    <%= successMessage %>
                </div>
            <% } %>

            <% if (errorMessage) { %>
                <div class="alert alert-danger">
                    <%= errorMessage %>
                </div>
            <% } %>

            <form class="contact-form" action="/api/contact-us/" method="POST">
                <div class="form-group">
                    <label for="name">Your Name</label>
                    <input type="text" id="name" name="name" placeholder="John Doe" value="<%= typeof formData !== 'undefined' && formData.name ? formData.name : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="email">Your Email</label>
                    <input type="email" id="email" name="email" placeholder="john.doe@example.com" value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" id="subject" name="subject" placeholder="Question about therapy services" value="<%= typeof formData !== 'undefined' && formData.subject ? formData.subject : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="message">Your Message</label>
                    <textarea id="message" name="message" rows="6" placeholder="Type your message here..." required><%= typeof formData !== 'undefined' && formData.message ? formData.message : '' %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>

            <div class="contact-info">
                <h3>Direct Contact</h3>
                <p><i class="fas fa-envelope"></i> Email: <a href="mailto:info@inneraura.com">info@inneraura.com</a></p>
                <p><i class="fas fa-phone"></i> Phone: +20 123 456 7890</p>
                <p><i class="fas fa-map-marker-alt"></i> Address: 123 Wellness Ave, Cairo, Egypt</p>
                <p class="hours"><i class="fas fa-clock"></i> Working Hours: Mon - Fri: 9 AM - 5 PM EEST</p>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>