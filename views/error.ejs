
<% var extraCSS = '<link rel="stylesheet" href="/css/error.css" />'; %>
    <%- include('./partials/header', {title: 'Error', extraCSS: extraCSS}) %>

    <div class="error-container">
        <div class="error-content">
            <div class="error-illustration">
                <i class="fas fa-exclamation-circle error-icon"></i>
                </div>
            <h1 class="error-title">Oops! Something Went Wrong.</h1>
            <p class="error-message">
                <%= typeof message !== 'undefined' ? message : 'We encountered an unexpected issue. Please try again later.' %>
            </p>
            <% if (typeof details !== 'undefined' && details && process.env.NODE_ENV === 'development') { %>
                <pre class="error-details"><code><%= details %></code></pre>
            <% } %>
            <div class="error-actions">
                <a href="/" class="btn btn-primary">Go to Homepage</a>
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>
