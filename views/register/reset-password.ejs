<% var extraCSS = '<link rel="stylesheet" href="/css/register/login.css" />'; %>
    <%- include('../partials/header', {title: 'Login', extraCSS: extraCSS}) %>
    <link rel="stylesheet" href="/css/register/login.css" />
    <main class="auth-container">
        <div class="form-card">
            <h1>Reset Your Password</h1>
            <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <% if (message) { %>
                <div class="alert alert-info"><%= message %></div>
            <% } %>
            <form action="/api/auth/reset-password/<%= token %>" method="POST">
                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" required minlength="8" class="form-control">
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required minlength="8" class="form-control">
                </div>
                <button type="submit" class="btn btn-submit">Reset Password</button>
            </form>
        </div>
    </main>
    <%- include('../partials/footer') %>
